<div class="row">
  <aside class="span4">
    <section>
      <h1>

        <%= current_user.name %> 
      </h1>

      <p><%= button_to "Add Property", addproperty_path%> </p>
    </section>
  </aside>

  <div class="span8">
    <% if @user.properties.any? %>
      <h3>Properties (<%= current_user.properties.count %>)</h3>
      <table id="properties" class="display">  
        <thead>                      
         <tr>                          
           <th>Name</th>
           <th>Address</th>
           <th>City</th>
           <th>County</th>
           <th>Postcode</th>
         </tr>
        </thead> 
         <%= render @properties %>

       </table>
      
      </ol>
      <%= will_paginate @properties %>
    <% end %>
  </div>
</div>
